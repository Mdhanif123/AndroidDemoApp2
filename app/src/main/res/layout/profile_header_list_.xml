<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgUserProfilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle"
        android:scaleType="fitXY"
        />

    <ImageButton
        android:id="@+id/editProfilePicture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/edit_profile_picture"
        app:layout_constraintBottom_toBottomOf="@id/imgUserProfilePicture"
        app:layout_constraintStart_toEndOf="@id/imgUserProfilePicture"
        android:layout_marginBottom="10dp"
        android:tint="@color/White"
        android:layout_marginLeft="0dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/black"
        />

    <TextView
        android:id="@+id/headerUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgUserProfilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Username"
        android:textSize="20sp"
        android:fontFamily="@font/helvetica"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>